	-/bin/chmod +x $(CONFIGUREEXEC) 
	-/bin/rm -i ../migrate-$(MIGRATEVERSION).$(OSTYPE)-$(CPUTYPE).tar.gz
	-/bin/rm -rf /tmp/migrate-tmp
